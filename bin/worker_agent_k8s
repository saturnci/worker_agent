#!/usr/bin/env ruby
# frozen_string_literal: true

# K8s entry point - hello world version

require_relative '../lib/saturn_ci_worker_api/client'

client = SaturnCIWorkerAPI::Client.new(ENV.fetch('SATURNCI_API_HOST'))
task_id = ENV.fetch('TASK_ID')

puts 'Sending hello world to system logs...'
client.post("tasks/#{task_id}/system_logs", content: 'Hello from K8s worker!')

puts 'Done'
